# Arquivo de exemplo para variáveis de ambiente
# Copie este arquivo para .env e ajuste as configurações

# Configurações da Aplicação
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# Configurações do Banco de Dados
POSTGRES_DB=cooperados_db
POSTGRES_USER=cooperados_user
POSTGRES_PASSWORD=cooperados_pass
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Configurações Java
JAVA_OPTS=-Xmx1g -Xms512m

# Configurações de Log
LOG_LEVEL=INFO

# Configurações de Segurança
JWT_SECRET=cooperadosSecretKey2024
JWT_EXPIRATION=86400000

# Configurações de Monitoramento
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
